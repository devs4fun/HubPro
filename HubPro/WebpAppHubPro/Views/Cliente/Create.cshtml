@model HubPro.Hub.API.DTOs.Request.ClienteRequest

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Criar Cliente</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }
    </style>
</head>
<body>

    <div class="container">

        <h2 class="text-center mb-4">Criar Cliente</h2>

        <form asp-controller="Cliente" asp-action="create" method="post">

            <div class="form-group">
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Documento">Documento:</label>
                <input asp-for="Documento" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" type="email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Celular">Celular:</label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Aniversario">Aniversário:</label>
                <input asp-for="Aniversario" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Rua">Rua:</label>
                <input asp-for="Endereco.Rua" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Bairro">Bairro:</label>
                <input asp-for="Endereco.Bairro" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Numero">Número:</label>
                <input asp-for="Endereco.Numero" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Estado">Estado:</label>
                <input asp-for="Endereco.Estado" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Cep">CEP:</label>
                <input asp-for="Endereco.Cep" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Complemento">Complemento:</label>
                <input asp-for="Endereco.Complemento" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Observacoes">Observações:</label>
                <textarea asp-for="Endereco.Observacoes" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Criar Cliente</button>

        </form>

    </div>

</body>
</html>
