@model HubPro.Hub.API.DTOs.Request.ClienteRequest

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Editar Cliente</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <div class="container">

        <h2 class="text-center mb-4">Editar Cliente</h2>

        <form asp-controller="Cliente" asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Documento">Documento:</label>
                <input asp-for="Documento" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Celular">Celular:</label>
                <input asp-for="Celular" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Aniversario">Aniversário:</label>
                <input asp-for="Aniversario" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="DataCadastro">Data de Cadastro:</label>
                <input asp-for="DataCadastro" type="date" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label>Endereço:</label>
                <div class="form-group">
                    <label asp-for="Endereco.Rua">Rua:</label>
                    <input asp-for="Endereco.Rua" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Endereco.Bairro">Bairro:</label>
                    <input asp-for="Endereco.Bairro" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Endereco.Numero">Número:</label>
                    <input asp-for="Endereco.Numero" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Endereco.Estado">Estado:</label>
                    <input asp-for="Endereco.Estado" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Endereco.Cep">CEP:</label>
                    <input asp-for="Endereco.Cep" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Endereco.Complemento">Complemento:</label>
                    <input asp-for="Endereco.Complemento" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Endereco.Observacoes">Observações:</label>
                    <input asp-for="Endereco.Observacoes" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            </div>
        </form>

    </div>

</body>
</html>
